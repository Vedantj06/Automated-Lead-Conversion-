# =====================================
# PRODUCTION CONFIGURATION
# =====================================

# API Configuration - Update with your deployed backend URL
VITE_API_URL=https://your-backend-url.render.com/api

# Service Endpoints (relative to API_URL)
VITE_AUTH_ENDPOINT=/auth
VITE_LEADS_ENDPOINT=/leads
VITE_CAMPAIGNS_ENDPOINT=/campaigns

# Application Settings
VITE_APP_NAME=Marketing Automation Platform
VITE_APP_DESCRIPTION=Lead management and automated outreach for digital agencies
VITE_APP_VERSION=1.0.0

# Regional Settings
VITE_DEFAULT_TIMEZONE=UTC
VITE_SUPPORTED_REGIONS=UAE,India,Australia,US

# Feature Flags
VITE_ENABLE_EMAIL_VALIDATION=true
VITE_ENABLE_LEAD_SCORING=true
VITE_ENABLE_DUPLICATE_DETECTION=true
VITE_ENABLE_ANALYTICS=true

# Production Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
