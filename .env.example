# =====================================
# MARKETING AUTOMATION PLATFORM CONFIG
# =====================================
# Copy this file to .env and configure your settings

# API Configuration
# Main API server base URL - replace with your backend URL
VITE_API_URL=http://localhost:3001/api

# Service Endpoints (relative to API_URL)
VITE_AUTH_ENDPOINT=/auth
VITE_LEADS_ENDPOINT=/leads
VITE_CAMPAIGNS_ENDPOINT=/campaigns
VITE_EMAIL_ENDPOINT=/email
VITE_WEB_SEARCH_ENDPOINT=/web-search
VITE_WEB_READER_ENDPOINT=/web-reader
VITE_FILE_UPLOAD_ENDPOINT=/files

# External Service APIs (Optional - configure if you have API keys)
# Email Service (Resend, SendGrid, etc.)
VITE_EMAIL_API_KEY=your_email_api_key_here
VITE_EMAIL_FROM_EMAIL=noreply@youragency.com
VITE_EMAIL_FROM_NAME=Your Marketing Agency

# Web Search & Data Services
VITE_WEB_SEARCH_API_KEY=your_web_search_api_key_here
VITE_WEB_READER_API_KEY=your_web_reader_api_key_here

# AI Services (if using AI for personalization)
VITE_AI_API_KEY=your_ai_api_key_here
VITE_AI_MODEL=gpt-3.5-turbo

# Application Settings
VITE_APP_NAME=Marketing Automation Platform
VITE_APP_DESCRIPTION=Lead management and automated outreach for digital agencies
VITE_APP_VERSION=1.0.0
VITE_APP_SUPPORT_EMAIL=support@youragency.com

# Regional Settings
VITE_DEFAULT_TIMEZONE=UTC
VITE_SUPPORTED_REGIONS=UAE,India,Australia,US

# Feature Flags
VITE_ENABLE_EMAIL_VALIDATION=true
VITE_ENABLE_LEAD_SCORING=true
VITE_ENABLE_DUPLICATE_DETECTION=true
VITE_ENABLE_ANALYTICS=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info